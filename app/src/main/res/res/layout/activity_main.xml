<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="www.lexiang.com.lexiang.MainActivity">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/rgp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">
            <!--注意是drawableTop-->
            <RadioButton
                android:checked="true"
                android:id="@+id/rb_home"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/tab_home_selector"
                android:text="本地"
                />

            <RadioButton
                android:id="@+id/rb_find"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/tab_good_selector"
                android:text="发现"
                />
             <ImageView
                 android:id="@+id/frag_add"
                 android:layout_weight="0.8"
                 android:layout_marginTop="8dp"
                 android:src="@drawable/fragment_add"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_message"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/tab_order_selector"
                android:text="消息"
                />
            <RadioButton
                android:id="@+id/rb_mine"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/tab_mine_selector"
                android:text="我"
                />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
