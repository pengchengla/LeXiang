<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                app:layout_scrollFlags="scroll|enterAlways"
                android:id="@+id/find_img"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/home_body"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:weightSum="5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_life"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="生活服务"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                    <View
                        android:id="@+id/v1"
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/font_orage"></View>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="便民服务"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                    <View
                        android:id="@+id/v2"
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/font_orage"
                        android:visibility="gone"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="小区议事"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                    <View
                        android:id="@+id/v3"
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/font_orage"
                        android:visibility="gone"></View>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_town"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="市政厅"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                    <View
                        android:id="@+id/v4"
                        android:layout_width="55dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/font_orage"
                        android:visibility="gone"></View>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="电话通"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                    <View
                        android:id="@+id/v5"
                        android:layout_width="55dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/font_orage"
                        android:visibility="gone"></View>
                </LinearLayout>
            </LinearLayout>
    </android.support.design.widget.AppBarLayout>
            <FrameLayout
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/find_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>

</android.support.design.widget.CoordinatorLayout>
