<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/activity_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="5dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/callback"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="完善个人信息"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="认证名称：实名认证"
            android:textColor="@color/textblack"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/huise"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="真实姓名:"
                android:textColor="@color/textblack"
            />
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请输入真实姓名"
                android:paddingRight="15dp"
                android:textSize="15sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/huise"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="身份证号码:"
                android:textColor="@color/textblack"
            />
            <EditText
                android:id="@+id/edt_shenfencard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请输入身份证号码"
                android:paddingRight="15dp"
                android:textSize="15sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/huise"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="附加说明:"
                android:textColor="@color/textblack"
            />
            <EditText
                android:id="@+id/edt_shuoming"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="该说明只用于审核不对外显示"
                android:paddingRight="15dp"
                android:textSize="15sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/huise"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="身份证正面:"
                android:textColor="@color/textblack"
            />
            <TextView
                android:id="@+id/tv_looksample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="40dp"
                android:gravity="left|center_vertical"
                android:paddingRight="15dp"
                android:text="查看示例"
                android:textColor="@color/text_red_dark2"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/iv_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:src="@drawable/icon_plus"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/huise"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="身份证反面:"
                android:textColor="@color/textblack"
            />
            <TextView
                android:id="@+id/tv_looksample2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="40dp"
                android:gravity="left|center_vertical"
                android:paddingRight="15dp"
                android:text="查看示例"
                android:textColor="@color/text_red_dark2"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/iv_card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:src="@drawable/icon_plus"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/huise"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="手持身份证:"
                android:textColor="@color/textblack"
            />
            <TextView
                android:id="@+id/tv_looksample3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="40dp"
                android:gravity="left|center_vertical"
                android:paddingRight="15dp"
                android:text="查看示例"
                android:textColor="@color/text_red_dark2"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/iv_card3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:src="@drawable/icon_plus"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/huise"></View>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/shape_radius"
            android:paddingBottom="10dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="提交认证"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>