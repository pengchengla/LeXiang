<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="50dp"></LinearLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <TextView
            android:id="@+id/home_Social"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/home_shejiao"
            android:gravity="center"
            android:text="趣味社交"
            android:textColor="@color/textblack"/>
        <TextView
            android:id="@+id/home_bighelp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/home_dabangjia"
            android:gravity="center"
            android:text="大家帮"
            android:textColor="@color/textblack"/>
        <TextView
            android:id="@+id/home_City"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/home_wanzhuan"
            android:gravity="center"
            android:text="玩转同城"
            android:textColor="@color/textblack"/>
        <TextView
            android:id="@+id/home_expedition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/home_taicheng"
            android:gravity="center"
            android:text="探城"
            android:textColor="@color/textblack"/>
        <TextView
            android:id="@+id/home_expert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/home_daren"
            android:gravity="center"
            android:text="乐享达人"
            android:textColor="@color/textblack"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/huise"></View>
    <www.lexiang.com.lexiang.utils.MyListview
        android:scrollbars="none"
        android:divider="@color/white"
        android:dividerHeight="0dp"
        android:id="@+id/list_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></www.lexiang.com.lexiang.utils.MyListview>
</LinearLayout>
    </ScrollView>
</LinearLayout>
